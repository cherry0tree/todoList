/**index.wxss**/
.container{
  background-image: url(https://t1.picb.cc/uploads/2018/01/30/U3Twu.jpg);
  color: #fff;
}
.today-weather-container{
  width: 96%;  
  margin: 10rpx auto;
  box-shadow: 0 0 2px #aaa inset;
}
.today-weather-container .location{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  max-width: 300rpx;
  font-size: 27rpx;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.2);
  box-shadow: 0 0 2px #aaa inset;
  border-radius: 5px;
  padding: 10rpx;
}
.toggle-button{
  text-align: center;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx;
  font-size: 30rpx;
  max-width: 300rpx;
}